<%= form_for(@roteirista) do |f| %>
  <% if @roteirista.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@roteirista.errors.count, "error") %> Não foi possível salvar este roteirista:</h2>

      <ul>
      <% @roteirista.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
